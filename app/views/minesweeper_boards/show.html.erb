<!-- MinesweeperApp/views/minesweeper_boards/show.html.erb -->

<% if @minesweeper_board %>
  <div class="minesweeper-container">
    <h1><%= @minesweeper_board.board_name %></h1>
    <p>Generated by: <%= @minesweeper_board.email %></p>

    <!-- Convert the string representation to a Ruby array -->
    <% mines_board = eval(@minesweeper_board.board) %>

    <!-- Visual representation of the Minesweeper board with borders -->
    <div class="minesweeper-board">
      <% mines_board.each do |row| %>
        <div class="board-row">
          <% row.each do |cell| %>
            <div class="cell <%= cell == :mine ? 'mine-cell' : 'empty-cell' %>">
              <%= cell == :mine ? 'ğŸ’£' : 'O' %> 
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>Minesweeper board not found.</p>
<% end %>
